@model FoodForum.Models.Rating

<form asp-action="UpdateRateRecipe" asp-controller="Recipes" asp-route-RecipeID="@ViewBag.Recipe.RecipeId" method="post" class="RatingForm">
  <select asp-for="Rate" required>
    <option value="@ViewBag.Rating">@ViewBag.Rating.Rate</option>
    @if(ViewBag.Rating.Rate != 1){
      <option value="1">1</option>
    }
    @if(ViewBag.Rating.Rate != 2){
      <option value="2">2</option>
    }
    @if(ViewBag.Rating.Rate != 3){
      <option value="3">3</option>
    }
    @if(ViewBag.Rating.Rate != 4){
      <option value="4">4</option>
    }
    @if(ViewBag.Rating.Rate != 5){
      <option value="5">5</option>
    }
  </select><br>
  <input type="submit" value="Update Rating">
</form>