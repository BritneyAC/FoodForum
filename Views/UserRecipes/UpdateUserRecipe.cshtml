@model FoodForum.Models.UpdateUserRecipe

<div class="Wrapper">
  <div class="Header">
    <h1>Update your Recipe</h1>
    <div class="HeaderLinks">
      <a asp-action="Index" asp-controller="Home">Home</a>
    </div>
  </div>
  <div class="Recipe">
    <h3>@ViewBag.Recipe.Title</h3>
    <h5>By @ViewBag.Recipe.User.Username</h5>
    @if(ViewBag.Recipe.PictureURL != null){
      <div class="RecipeListPictureBackground">
        <div class="RecipeListPicture" style="background-image: url(@ViewBag.Recipe.PictureURL)";></div>
      </div>
    }
    <ul>
      @foreach(var ingredient in ViewBag.Recipe.GetIngredients()){
        <li>@ingredient</li>
      }
    </ul>
    <p>
      <pre class="Content">@ViewBag.Recipe.Content</pre>
    </p>
  </div>
  <div class="Forms">
    <form asp-action="UpdatingUserRecipeAsync" asp-controller="UserRecipes" asp-route-RecipeId="@ViewBag.Recipe.RecipeId" method="post" id="RecipeForm" enctype="multipart/form-data">
      <div class="FormSection">
        <span asp-validation-for="Title" id="RecipeTitleMsg"></span><br>
        <label asp-for="Title">Title</label><br>
        <input asp-for="Title" required minlength="3" maxlength="55" id="RecipeTitle" value="@ViewBag.Recipe.Title"><br>
      </div>
      <div class="MiddleFormSection">
        <span asp-validation-for="IngredientOne"></span><br>
        <label asp-for="IngredientOne">Ingredient #1 (Required): </label><br>
        <input asp-for="IngredientOne" required minlength="2" maxlength="65" value="@ViewBag.Recipe.IngredientOne"><br>
        <span asp-validation-for="IngredientTwo"></span><br>
        <label asp-for="IngredientTwo">Ingredient #2 (Required): </label><br>
        <input asp-for="IngredientTwo" required minlength="2" maxlength="65" value="@ViewBag.Recipe.IngredientTwo"><br>
        <span asp-validation-for="IngredientThree"></span><br>
        <label asp-for="IngredientThree">Ingredient #3 (Required): </label><br>
        <input asp-for="IngredientThree" required minlength="2" maxlength="65" value="@ViewBag.Recipe.IngredientThree"><br>
        <br class="IngredientFourBtn">
        <button class="IngredientFourBtn">Add Another Ingredient</button><br class="IngredientFourBtn"><br class="IngredientFourBtn">
        <div id="IngredientFourShow">
          <span asp-validation-for="IngredientFour"></span><br>
          <label asp-for="IngredientFour">Ingredient #4 (Optional): </label><br>
          <input asp-for="IngredientFour" minlength="2" maxlength="65" value="@ViewBag.Recipe.IngredientFour"><br>
          <br class="IngredientFiveBtn">
          <button class="IngredientFiveBtn">Add Another Ingredient</button><br class="IngredientFiveBtn"><br class="IngredientFiveBtn">
        </div>
        <div id="IngredientFiveShow">
          <span asp-validation-for="IngredientFive"></span><br>
          <label asp-for="IngredientFive">Ingredient #5 (Optional): </label><br>
          <input asp-for="IngredientFive" minlength="2" maxlength="65" value="@ViewBag.Recipe.IngredientFive"><br>
          <br class="IngredientSixBtn">
          <button class="IngredientSixBtn">Add Another Ingredient</button><br class="IngredientSixBtn"><br class="IngredientSixBtn">
