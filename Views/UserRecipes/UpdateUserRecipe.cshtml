        </div>
      </div>
      <div class="FormSection">
        <Label for="Content">Recipe</Label><br>
        <textarea name="Content" cols="30" rows="10" required minlength="8" maxlength="2555">@ViewBag.Recipe.Content</textarea><br>
        <span asp-validation-for="UploadPicture"></span><br>
        <label asp-for="UploadPicture">Picture (Optional)</label><br>
        <input asp-for="UploadPicture">
      </div><br>
      <input type="submit" value="Update">
    </form>
</div>
</div>