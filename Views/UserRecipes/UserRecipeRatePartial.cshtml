@model FoodForum.Models.Rating

<form asp-action="RateUserRecipe" asp-controller="Home" method="post">
    @if(ViewBag.Recipe.Ratings.Contains(ViewBag.User)){
      <select asp-for="Rate" required>
        <option value="@ViewBag.Rating">@ViewBag.Rating</option>
        @if(ViewBag.Rating != 1){
          <option value="1">1</option>
        }
        @if(ViewBag.Rating != 2){
          <option value="2">2</option>
        }
        @if(ViewBag.Rating != 5){
          <option value="3">3</option>
        }
        @if(ViewBag.Rating != 4){
          <option value="4">4</option>
        }
        @if(ViewBag.Rating != 5){
          <option value="5">5</option>
        }
      </select>
    } else{
      <select asp-for="Rate">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    }
    <input asp-for="RecipeId" value="@ViewBag.Recipe.RecipeId" readonly hidden required><br>
    <input type="submit" value="Rate">
  </form>