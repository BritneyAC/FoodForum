@model FoodForum.Models.Rating

<form asp-action="RateUserRecipe" asp-controller="UserRecipes" asp-route-RecipeId="@ViewBag.Recipe.RecipeId" method="post" class="RatingForm">
  <select asp-for="Rate" required>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select><br>
  <input type="submit" value="Rate">
</form>